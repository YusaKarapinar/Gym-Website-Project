@model GymViewModel

@{
    ViewData["Title"] = "Salon Detayı";
}

<div class="text-center py-4 mb-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="container text-white">
        <h1 class="display-5 fw-bold mb-2">
            <i class="fas fa-info-circle"></i> Salon Detayı
        </h1>
        <p class="lead mb-0">@Model.Name</p>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-sm mb-4">
                <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                    <h5 class="mb-0"><i class="fas fa-building"></i> Salon Bilgileri</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4"><i class="fas fa-tag"></i> İsim</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4"><i class="fas fa-map-marker-alt"></i> Adres</dt>
                        <dd class="col-sm-8">@Model.Address</dd>

                        <dt class="col-sm-4"><i class="fas fa-phone"></i> Telefon</dt>
                        <dd class="col-sm-8">@Model.PhoneNumber</dd>

                        <dt class="col-sm-4"><i class="fas fa-check-circle"></i> Durum</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Pasif</span>
                            }
                        </dd>

                        <dt class="col-sm-4"><i class="fas fa-calendar-plus"></i> Oluşturma Tarihi</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</dd>

                        @if (Model.UpdatedAt.HasValue)
                        {
                            <dt class="col-sm-4"><i class="fas fa-calendar-check"></i> Güncellenme Tarihi</dt>
                            <dd class="col-sm-8">@Model.UpdatedAt.Value.ToString("dd.MM.yyyy HH:mm")</dd>
                        }
                    </dl>
                </div>
            </div>

            @if (Model.Services != null && Model.Services.Any())
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                        <h5 class="mb-0"><i class="fas fa-concierge-bell"></i> Bu Salona Ait Hizmetler</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Hizmet Adı</th>
                                    <th>Tür</th>
                                    <th>Fiyat</th>
                                    <th>Süre</th>
                                    <th>Durum</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var service in Model.Services)
                                {
                                    <tr>
                                        <td class="fw-bold">@service.Name</td>
                                        <td>@service.ServiceType</td>
                                        <td>@service.Price.ToString("C2")</td>
                                        <td>@service.Duration.ToString(@"hh\:mm")</td>
                                        <td>
                                            @if (service.IsActive)
                                            {
                                                <span class="badge bg-success">Aktif</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Pasif</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Bu salona henüz hizmet eklenmemiş.
                </div>
            }

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Listeye Dön
                </a>
                <a asp-action="Edit" asp-route-id="@Model.GymId" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Düzenle
                </a>
            </div>
        </div>
    </div>
</div>
