@model GymViewModel

@{
    ViewData["Title"] = "Salon Sil";
}

<div class="text-center py-4 mb-4" style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);">
    <div class="container text-white">
        <h1 class="display-5 fw-bold mb-2">
            <i class="fas fa-exclamation-triangle"></i> Salon Sil
        </h1>
        <p class="lead mb-0">Bu işlem geri alınamaz!</p>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">
                    <i class="fas fa-exclamation-circle"></i> Dikkat!
                </h4>
                <p class="mb-0">Bu salonu silmek istediğinize emin misiniz?</p>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Silinecek Salon Bilgileri</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4"><i class="fas fa-tag"></i> İsim</dt>
                        <dd class="col-sm-8">@Model.Name</dd>
                        
                        <dt class="col-sm-4"><i class="fas fa-map-marker-alt"></i> Adres</dt>
                        <dd class="col-sm-8">@Model.Address</dd>
                        
                        <dt class="col-sm-4"><i class="fas fa-phone"></i> Telefon</dt>
                        <dd class="col-sm-8 mb-0">@Model.PhoneNumber</dd>
                    </dl>
                </div>
            </div>
            
            <form asp-action="Delete">
                <input type="hidden" asp-for="GymId" />
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> İptal
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Evet, Sil
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
