@model GymViewModel

@{
    ViewData["Title"] = "New Gym";
}

<h1 style="margin-bottom:32px;">New Gym</h1>

<div style="max-width:600px;">
    <form asp-action="Create">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" placeholder="Gym name" />
        <span asp-validation-for="Name" class="error"></span>
        
        <label asp-for="Address">Address</label>
        <input asp-for="Address" placeholder="Address" />
        <span asp-validation-for="Address" class="error"></span>
        
        <label asp-for="PhoneNumber">Phone</label>
        <input asp-for="PhoneNumber" placeholder="Phone number" />
        <span asp-validation-for="PhoneNumber" class="error"></span>
        
        <label style="display:inline-flex; align-items:center; font-weight:normal; cursor:pointer; margin-bottom:20px;">
            <input asp-for="IsActive" type="checkbox" checked style="display:inline-block; width:auto; margin:0 8px 0 0;" />
            Active
        </label>
        
        <div style="margin-top:24px;">
            <button type="submit">Create Gym</button>
            <a class="btn-secondary" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
