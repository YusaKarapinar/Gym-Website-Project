@model DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<h1 style="margin-bottom:32px;">Admin Dashboard</h1>

<!-- Stats Grid -->
<div style="display:grid; grid-template-columns:repeat(auto-fit,minmax(240px,1fr)); gap:20px; margin-bottom:48px;">
    <div style="padding:24px; border:1px solid #e5e5e5; border-radius:8px; background:#fafafa;">
        <div style="font-size:13px; color:#666; font-weight:600; margin-bottom:8px;">GYMS</div>
        <div style="font-size:32px; font-weight:600; color:#000; margin-bottom:4px;">@Model.TotalGyms</div>
        <div style="font-size:13px; color:#2e7d32;">@Model.ActiveGyms Active</div>
    </div>
    
    <div style="padding:24px; border:1px solid #e5e5e5; border-radius:8px; background:#fafafa;">
        <div style="font-size:13px; color:#666; font-weight:600; margin-bottom:8px;">SERVICES</div>
        <div style="font-size:32px; font-weight:600; color:#000; margin-bottom:4px;">@Model.TotalServices</div>
        <div style="font-size:13px; color:#2e7d32;">@Model.ActiveServices Active</div>
    </div>
    
    <div style="padding:24px; border:1px solid #e5e5e5; border-radius:8px; background:#fafafa;">
        <div style="font-size:13px; color:#666; font-weight:600; margin-bottom:8px;">USERS</div>
        <div style="font-size:32px; font-weight:600; color:#000; margin-bottom:4px;">@Model.TotalUsers</div>
        <div style="font-size:13px; color:#666;">@Model.TotalTrainers Trainers, @Model.TotalMembers Members</div>
    </div>
    
    <div style="padding:24px; border:1px solid #e5e5e5; border-radius:8px; background:#fafafa;">
        <div style="font-size:13px; color:#666; font-weight:600; margin-bottom:8px;">APPOINTMENTS</div>
        <div style="font-size:32px; font-weight:600; color:#000; margin-bottom:4px;">@Model.TotalAppointments</div>
        <div style="font-size:13px; color:#e65100;">@Model.PendingAppointments Pending</div>
    </div>
</div>

<!-- Gyms Section -->
<div style="margin-bottom:48px;">
    <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:16px;">
        <h2>Gyms</h2>
        <a asp-controller="Gyms" asp-action="Index">View All →</a>
    </div>
    <div style="border:1px solid #e5e5e5; border-radius:8px; overflow:hidden;">
        <table style="width:100%; border-collapse:collapse;">
            <thead>
                <tr style="background:#fafafa; border-bottom:1px solid #e5e5e5;">
                    <th style="padding:12px 16px; text-align:left; font-size:13px; font-weight:600; color:#666;">Name</th>
                    <th style="padding:12px 16px; text-align:left; font-size:13px; font-weight:600; color:#666;">Address</th>
                    <th style="padding:12px 16px; text-align:left; font-size:13px; font-weight:600; color:#666;">Phone</th>
                    <th style="padding:12px 16px; text-align:left; font-size:13px; font-weight:600; color:#666;">Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var gym in Model.Gyms.Take(5)) {
                    <tr style="border-bottom:1px solid #f5f5f5;">
                        <td style="padding:12px 16px; font-weight:500;">@gym.Name</td>
                        <td style="padding:12px 16px; color:#666;">@gym.Address</td>
                        <td style="padding:12px 16px; color:#666;">@gym.PhoneNumber</td>
                        <td style="padding:12px 16px;">
                            <span style="display:inline-block; padding:4px 10px; background:@(gym.IsActive?"#e8f5e9":"#f5f5f5"); color:@(gym.IsActive?"#2e7d32":"#666"); border-radius:4px; font-size:13px; font-weight:500;">@(gym.IsActive?"Active":"Inactive")</span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Services Section -->
<div style="margin-bottom:48px;">
    <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:16px;">
        <h2>Services</h2>
        <a asp-controller="Services" asp-action="Index">View All →</a>
    </div>
    <div style="border:1px solid #e5e5e5; border-radius:8px; overflow:hidden;">
        <table style="width:100%; border-collapse:collapse;">
            <thead>
                <tr style="background:#fafafa; border-bottom:1px solid #e5e5e5;">
                    <th style="padding:12px 16px; text-align:left; font-size:13px; font-weight:600; color:#666;">Service</th>
                    <th style="padding:12px 16px; text-align:left; font-size:13px; font-weight:600; color:#666;">Type</th>
                    <th style="padding:12px 16px; text-align:left; font-size:13px; font-weight:600; color:#666;">Gym</th>
                    <th style="padding:12px 16px; text-align:left; font-size:13px; font-weight:600; color:#666;">Price</th>
                    <th style="padding:12px 16px; text-align:left; font-size:13px; font-weight:600; color:#666;">Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var service in Model.Services.Take(5)) {
                    <tr style="border-bottom:1px solid #f5f5f5;">
                        <td style="padding:12px 16px; font-weight:500;">@service.Name</td>
                        <td style="padding:12px 16px; color:#666;">@service.ServiceType</td>
                        <td style="padding:12px 16px; color:#666;">@service.GymName</td>
                        <td style="padding:12px 16px; font-weight:500;">@service.Price.ToString("C2")</td>
                        <td style="padding:12px 16px;">
                            <span style="display:inline-block; padding:4px 10px; background:@(service.IsActive?"#e8f5e9":"#f5f5f5"); color:@(service.IsActive?"#2e7d32":"#666"); border-radius:4px; font-size:13px; font-weight:500;">@(service.IsActive?"Active":"Inactive")</span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Recent Appointments -->
<div style="margin-bottom:48px;">
    <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:16px;">
        <h2>Recent Appointments</h2>
        <a asp-controller="Appointments" asp-action="Index">View All →</a>
    </div>
    <div style="border:1px solid #e5e5e5; border-radius:8px; overflow:hidden;">
        <table style="width:100%; border-collapse:collapse;">
            <thead>
                <tr style="background:#fafafa; border-bottom:1px solid #e5e5e5;">
                    <th style="padding:12px 16px; text-align:left; font-size:13px; font-weight:600; color:#666;">Date</th>
                    <th style="padding:12px 16px; text-align:left; font-size:13px; font-weight:600; color:#666;">Member</th>
                    <th style="padding:12px 16px; text-align:left; font-size:13px; font-weight:600; color:#666;">Trainer</th>
                    <th style="padding:12px 16px; text-align:left; font-size:13px; font-weight:600; color:#666;">Service</th>
                    <th style="padding:12px 16px; text-align:left; font-size:13px; font-weight:600; color:#666;">Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var apt in Model.Appointments.OrderByDescending(a => a.Date).Take(10)) {
                    <tr style="border-bottom:1px solid #f5f5f5;">
                        <td style="padding:12px 16px; color:#666;">@apt.Date.ToString("dd.MM.yyyy") @apt.Time.ToString(@"hh\:mm")</td>
                        <td style="padding:12px 16px;">@apt.UserName</td>
                        <td style="padding:12px 16px; color:#666;">@apt.TrainerName</td>
                        <td style="padding:12px 16px; color:#666;">@apt.ServiceName</td>
                        <td style="padding:12px 16px;">
                            @{
                                var statusBg = apt.Status switch {
                                    "Pending" => "#fff3e0",
                                    "Approved" => "#e8f5e9",
                                    "Rejected" => "#ffebee",
                                    "Canceled" => "#f5f5f5",
                                    "Completed" => "#e3f2fd",
                                    _ => "#f5f5f5"
                                };
                                var statusColor = apt.Status switch {
                                    "Pending" => "#e65100",
                                    "Approved" => "#2e7d32",
                                    "Rejected" => "#c62828",
                                    "Canceled" => "#666",
                                    "Completed" => "#1565c0",
                                    _ => "#666"
                                };
                            }
                            <span style="display:inline-block; padding:4px 10px; background:@statusBg; color:@statusColor; border-radius:4px; font-size:13px; font-weight:500;">@apt.Status</span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="container">
    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm border-0" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                <div class="card-body text-center">
                    <i class="fas fa-building fa-3x mb-3"></i>
                    <h3 class="fw-bold">@Model.TotalGyms</h3>
                    <p class="mb-1">Toplam Salon</p>
                    <small>@Model.ActiveGyms Aktif</small>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm border-0" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); color: white;">
                <div class="card-body text-center">
                    <i class="fas fa-concierge-bell fa-3x mb-3"></i>
                    <h3 class="fw-bold">@Model.TotalServices</h3>
                    <p class="mb-1">Toplam Hizmet</p>
                    <small>@Model.ActiveServices Aktif</small>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm border-0" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); color: white;">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x mb-3"></i>
                    <h3 class="fw-bold">@Model.TotalUsers</h3>
                    <p class="mb-1">Toplam Kullanıcı</p>
                    <small>@Model.TotalTrainers Eğitmen, @Model.TotalMembers Üye</small>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm border-0" style="background: linear-gradient(135deg, #fa709a 0%, #fee140 100%); color: white;">
                <div class="card-body text-center">
                    <i class="fas fa-calendar-alt fa-3x mb-3"></i>
                    <h3 class="fw-bold">@Model.TotalAppointments</h3>
                    <p class="mb-1">Toplam Randevu</p>
                    <small>@Model.PendingAppointments Beklemede</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Gyms Table -->
    <div class="card shadow-sm mb-4">
        <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
            <h5 class="mb-0">
                <i class="fas fa-building"></i> Spor Salonları
                <a asp-controller="Gyms" asp-action="Index" class="btn btn-light btn-sm float-end">
                    Tümünü Gör <i class="fas fa-arrow-right"></i>
                </a>
            </h5>
        </div>
        <div class="card-body">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>İsim</th>
                        <th>Adres</th>
                        <th>Telefon</th>
                        <th>Durum</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var gym in Model.Gyms.Take(5))
                    {
                        <tr>
                            <td class="fw-bold">@gym.Name</td>
                            <td>@gym.Address</td>
                            <td>@gym.PhoneNumber</td>
                            <td>
                                @if (gym.IsActive)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Pasif</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Services Table -->
    <div class="card shadow-sm mb-4">
        <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
            <h5 class="mb-0">
                <i class="fas fa-concierge-bell"></i> Hizmetler
                <a asp-controller="Services" asp-action="Index" class="btn btn-light btn-sm float-end">
                    Tümünü Gör <i class="fas fa-arrow-right"></i>
                </a>
            </h5>
        </div>
        <div class="card-body">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Hizmet Adı</th>
                        <th>Tür</th>
                        <th>Salon</th>
                        <th>Fiyat</th>
                        <th>Durum</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var service in Model.Services.Take(5))
                    {
                        <tr>
                            <td class="fw-bold">@service.Name</td>
                            <td>@service.ServiceType</td>
                            <td>@service.GymName</td>
                            <td>@service.Price.ToString("C2")</td>
                            <td>
                                @if (service.IsActive)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Pasif</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card shadow-sm mb-4">
        <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
            <h5 class="mb-0">
                <i class="fas fa-users"></i> Kullanıcılar
            </h5>
        </div>
        <div class="card-body">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Kullanıcı Adı</th>
                        <th>Email</th>
                        <th>Rol</th>
                        <th>Spor Salonu</th>
                        <th>Bio</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users.Take(10))
                    {
                        <tr>
                            <td class="fw-bold">@user.UserName</td>
                            <td>@user.Email</td>
                            <td>
                                @switch (user.Role)
                                {
                                    case "Admin":
                                        <span class="badge bg-danger">Admin</span>
                                        break;
                                    case "Trainer":
                                        <span class="badge bg-warning">Eğitmen</span>
                                        break;
                                    case "Member":
                                        <span class="badge bg-info">Üye</span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary">@user.Role</span>
                                        break;
                                }
                            </td>
                            <td>@(string.IsNullOrEmpty(user.GymName) ? "-" : user.GymName)</td>
                            <td>@(string.IsNullOrEmpty(user.Bio) ? "-" : user.Bio)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Appointments Table -->
    <div class="card shadow-sm mb-4">
        <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
            <h5 class="mb-0">
                <i class="fas fa-calendar-alt"></i> Son Randevular
                <a asp-controller="Appointments" asp-action="Index" class="btn btn-light btn-sm float-end">
                    Tümünü Gör <i class="fas fa-arrow-right"></i>
                </a>
            </h5>
        </div>
        <div class="card-body">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Tarih</th>
                        <th>Saat</th>
                        <th>Üye</th>
                        <th>Eğitmen</th>
                        <th>Hizmet</th>
                        <th>Durum</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var appointment in Model.Appointments.OrderByDescending(a => a.Date).Take(10))
                    {
                        <tr>
                            <td>@appointment.Date.ToString("dd.MM.yyyy")</td>
                            <td>@appointment.Time.ToString(@"hh\:mm")</td>
                            <td>@appointment.UserName</td>
                            <td>@appointment.TrainerName</td>
                            <td>@appointment.ServiceName</td>
                            <td>
                                @switch (appointment.Status)
                                {
                                    case "Pending":
                                        <span class="badge bg-warning">Beklemede</span>
                                        break;
                                    case "Approved":
                                        <span class="badge bg-success">Onaylandı</span>
                                        break;
                                    case "Rejected":
                                        <span class="badge bg-danger">Reddedildi</span>
                                        break;
                                    case "Canceled":
                                        <span class="badge bg-secondary">İptal</span>
                                        break;
                                    case "Completed":
                                        <span class="badge bg-info">Tamamlandı</span>
                                        break;
                                    default:
                                        <span class="badge bg-light text-dark">@appointment.Status</span>
                                        break;
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
