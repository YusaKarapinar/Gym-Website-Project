@model DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid py-4">
    <h1 class="mb-4">Admin Dashboard</h1>

    <!-- Stats Grid -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">TOPLAM SALON</h6>
                            <h2 class="mb-0">@Model.TotalGyms</h2>
                            <small class="text-success">@Model.ActiveGyms Aktif</small>
                        </div>
                        <div class="bg-primary bg-opacity-10 p-3 rounded">
                            <i class="bi bi-building fs-1 text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">TOPLAM HİZMET</h6>
                            <h2 class="mb-0">@Model.TotalServices</h2>
                            <small class="text-success">@Model.ActiveServices Aktif</small>
                        </div>
                        <div class="bg-success bg-opacity-10 p-3 rounded">
                            <i class="bi bi-clipboard-check fs-1 text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">TOPLAM KULLANICI</h6>
                            <h2 class="mb-0">@Model.TotalUsers</h2>
                            <small class="text-muted">@Model.TotalTrainers Eğitmen, @Model.TotalMembers Üye</small>
                        </div>
                        <div class="bg-info bg-opacity-10 p-3 rounded">
                            <i class="bi bi-people fs-1 text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">TOPLAM RANDEVU</h6>
                            <h2 class="mb-0">@Model.TotalAppointments</h2>
                            <small class="text-warning">@Model.PendingAppointments Beklemede</small>
                        </div>
                        <div class="bg-warning bg-opacity-10 p-3 rounded">
                            <i class="bi bi-calendar-check fs-1 text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Gyms Section -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
            <h5 class="mb-0">Spor Salonları</h5>
            <a asp-controller="Gyms" asp-action="Index" class="btn btn-sm btn-outline-primary">Tümünü Gör</a>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>İsim</th>
                            <th>Adres</th>
                            <th>Telefon</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Gyms.Any())
                        {
                            @foreach (var gym in Model.Gyms.Take(5))
                            {
                                <tr>
                                    <td class="fw-semibold">@gym.Name</td>
                                    <td class="text-muted">@gym.Address</td>
                                    <td class="text-muted">@gym.PhoneNumber</td>
                                    <td>
                                        <span class="badge @(gym.IsActive ? "bg-success" : "bg-secondary")">
                                            @(gym.IsActive ? "Aktif" : "Pasif")
                                        </span>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted py-4">Henüz salon eklenmemiş</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Services Section -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
            <h5 class="mb-0">Hizmetler</h5>
            <a asp-controller="Services" asp-action="Index" class="btn btn-sm btn-outline-primary">Tümünü Gör</a>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Hizmet Adı</th>
                            <th>Tür</th>
                            <th>Salon</th>
                            <th>Fiyat</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Services.Any())
                        {
                            @foreach (var service in Model.Services.Take(5))
                            {
                                <tr>
                                    <td class="fw-semibold">@service.Name</td>
                                    <td class="text-muted">@service.ServiceType</td>
                                    <td class="text-muted">@service.GymName</td>
                                    <td class="fw-semibold text-primary">₺@service.Price.ToString("N2")</td>
                                    <td>
                                        <span class="badge @(service.IsActive ? "bg-success" : "bg-secondary")">
                                            @(service.IsActive ? "Aktif" : "Pasif")
                                        </span>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted py-4">Henüz hizmet eklenmemiş</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Users Section -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0">Kullanıcılar</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Kullanıcı Adı</th>
                            <th>Email</th>
                            <th>Rol</th>
                            <th>Spor Salonu</th>
                            <th>Bio</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users.Take(10))
                        {
                            <tr>
                                <td class="fw-semibold">@user.UserName</td>
                                <td class="text-muted">@user.Email</td>
                                <td>
                                    @if (user.Role == "Admin")
                                    {
                                        <span class="badge bg-danger">Admin</span>
                                    }
                                    else if (user.Role == "Trainer")
                                    {
                                        <span class="badge bg-warning text-dark">Eğitmen</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">Üye</span>
                                    }
                                </td>
                                <td class="text-muted">@(string.IsNullOrEmpty(user.GymName) ? "-" : user.GymName)</td>
                                <td class="text-muted">@(string.IsNullOrEmpty(user.Bio) ? "-" : user.Bio)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Appointments Section -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
            <h5 class="mb-0">Son Randevular</h5>
            <a asp-controller="Appointments" asp-action="Index" class="btn btn-sm btn-outline-primary">Tümünü Gör</a>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Tarih</th>
                            <th>Saat</th>
                            <th>Üye</th>
                            <th>Eğitmen</th>
                            <th>Hizmet</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Appointments.Any())
                        {
                            @foreach (var appointment in Model.Appointments.Take(10))
                            {
                                <tr>
                                    <td class="text-muted">@appointment.Date.ToString("dd MMM yyyy")</td>
                                    <td class="text-muted">@appointment.Time.ToString(@"hh\:mm")</td>
                                    <td class="fw-semibold">@appointment.UserName</td>
                                    <td class="text-muted">@appointment.TrainerName</td>
                                    <td class="text-muted">@appointment.ServiceName</td>
                                    <td>
                                        @if (appointment.Status == "Pending")
                                        {
                                            <span class="badge bg-warning text-dark">Beklemede</span>
                                        }
                                        else if (appointment.Status == "Confirmed")
                                        {
                                            <span class="badge bg-success">Onaylandı</span>
                                        }
                                        else if (appointment.Status == "Cancelled")
                                        {
                                            <span class="badge bg-danger">İptal</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Tamamlandı</span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">Henüz randevu oluşturulmamış</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
