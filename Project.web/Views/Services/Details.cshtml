@model ServiceViewModel

@{
    ViewData["Title"] = "Service Details";
}

<div style="max-width:700px;">
    <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:32px;">
        <h1>Service Details</h1>
        <div>
            <a class="btn" asp-action="Edit" asp-route-id="@Model.ServiceId">Edit</a>
            <a class="btn-secondary" asp-action="Index">Back to List</a>
        </div>
    </div>

    <div style="padding:32px; border:1px solid #e5e5e5; border-radius:8px; background:#fafafa;">
        <h2 style="margin-bottom:24px;">@Model.Name</h2>
        
        <div style="margin-bottom:20px;">
            <label style="display:block; font-weight:600; color:#666; font-size:13px; margin-bottom:4px;">Description</label>
            <p style="margin:0; font-size:15px;">@(string.IsNullOrEmpty(Model.Description) ? "No description" : Model.Description)</p>
        </div>

        <div style="display:grid; grid-template-columns:1fr 1fr; gap:20px; margin-bottom:20px;">
            <div>
                <label style="display:block; font-weight:600; color:#666; font-size:13px; margin-bottom:4px;">Type</label>
                <p style="margin:0; font-size:15px;">@Model.ServiceType</p>
            </div>
            <div>
                <label style="display:block; font-weight:600; color:#666; font-size:13px; margin-bottom:4px;">Duration</label>
                <p style="margin:0; font-size:15px;">@Model.Duration.ToString(@"hh\:mm")</p>
            </div>
        </div>

        <div style="display:grid; grid-template-columns:1fr 1fr; gap:20px; margin-bottom:20px;">
            <div>
                <label style="display:block; font-weight:600; color:#666; font-size:13px; margin-bottom:4px;">Price</label>
                <p style="margin:0; font-size:20px; font-weight:600; color:#0066cc;">@Model.Price.ToString("C2")</p>
            </div>
            <div>
                <label style="display:block; font-weight:600; color:#666; font-size:13px; margin-bottom:4px;">Gym</label>
                <p style="margin:0; font-size:15px;">@Model.GymName</p>
            </div>
        </div>

        <div>
            <label style="display:block; font-weight:600; color:#666; font-size:13px; margin-bottom:8px;">Status</label>
            <span style="display:inline-block; padding:6px 14px; background:@(Model.IsActive?"#e8f5e9":"#f5f5f5"); color:@(Model.IsActive?"#2e7d32":"#666"); border-radius:6px; font-size:14px; font-weight:500;">@(Model.IsActive ? "Active" : "Inactive")</span>
        </div>
    </div>
</div>
