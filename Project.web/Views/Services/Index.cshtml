@model IEnumerable<ServiceViewModel>

@{
    ViewData["Title"] = "Services";
}

<div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:32px;">
    <h1>Services</h1>
    <a class="btn" asp-action="Create">New Service</a>
</div>

@if (Model == null || !Model.Any()) {
    <div style="text-align:center; padding:60px 20px; color:#999;">
        <p style="font-size:16px;">No services yet. Create your first service to get started.</p>
    </div>
} else {
    <ul class="list">
        @foreach (var service in Model) {
            <li>
                <strong>@service.Name</strong>
                <div>@service.ServiceType • @service.Duration.ToString(@"hh\:mm") • @service.Price.ToString("C2")</div>
                <div>@service.GymName</div>
                <div style="margin-top:8px;">
                    <span style="display:inline-block; padding:4px 10px; background:@(service.IsActive?"#e8f5e9":"#f5f5f5"); color:@(service.IsActive?"#2e7d32":"#666"); border-radius:4px; font-size:13px; font-weight:500;">@(service.IsActive ? "Active" : "Inactive")</span>
                </div>
                <div style="margin-top:12px; padding-top:12px; border-top:1px solid #e5e5e5;">
                    <a asp-action="Details" asp-route-id="@service.ServiceId">Details</a>
                    <span style="margin:0 8px; color:#ccc;">•</span>
                    <a asp-action="Edit" asp-route-id="@service.ServiceId">Edit</a>
                    <span style="margin:0 8px; color:#ccc;">•</span>
                    <a asp-action="Delete" asp-route-id="@service.ServiceId" style="color:#d32f2f;">Delete</a>
                </div>
            </li>
        }
    </ul>
}
